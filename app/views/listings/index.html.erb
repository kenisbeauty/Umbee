<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <th>Availability from</th>
      <th>Availability to</th>
      <th>Home type</th>
      <th>Room type</th>
      <th>Description</th>
      <th>Amenites</th>
      <th>Maximum guest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
         <td><%= image_tag listing.image.url unless listing.image.blank? %></td>
        <td><%= listing.name %></td>
        <td><%= listing.address %></td>
        <td><%= listing.price %></td>
        <td><%= listing.availability_from %></td>
        <td><%= listing.availability_to %></td>
        <td><%= listing.home_type %></td>
        <td><%= listing.room_type %></td>
        <td><%= listing.description %></td>
        <td><%= listing.amenites %></td>
        <td><%= listing.maximum_guest %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>


