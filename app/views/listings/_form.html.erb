<%= form_for(listing,  html: { multipart: true }) do |f| %>
  <% if listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button ytype="button" class="close" data-dismisss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control-static" %></br>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address,class: "form-control-static" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control-static" %>
  </div>

 <div class="form-group">
    <%= f.label :availability_from %>
    <%= f.date_select :availability_from,class: "form-control-static" %>
  </div>

  <div class="form-group">
    <%= f.label :availability_to %>
    <%= f.date_select :availability_to,class: "form-control-static" %>
  </div>

 <div class="form-group">
    <%= f.label :home_type %>
    <%= f.select :home_type, get_home_types.map {|value| [value,value]}, class: "form-control-static" %>
  </div>

  <div class="form-group">
    <%= f.label :room_type %>
    <%= f.select :room_type, get_room_types.map {|value| [value,value]}, class: "form-control-static" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control-static" %>
  </div>

  <div class="form-group">
    <%= f.label :amenites %>
    <%= f.text_field :amenites, class: "form-control-static" %>
  </div>

  <div class="form-group">
    <%= f.label :maximum_guest %>
    <%= f.text_field :maximum_guest, class: "form-control-static" %>
  </div>
  
   <div class="form-group">
    <%= f.label :image %>
   <%= f.file_field :image,class: "form-control-static" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>


